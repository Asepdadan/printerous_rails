<%= @page_title = "Form Person" %>

  <% content_for :stylesheets do %>
   
  <% end %>
 
  <% content_for :link_href do %>

  <% end %>

  <% content_for :content_html do %>
   
   <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-10">
                            Form Person
                        </div>

                        <div class="col-md-2">
                            <a href="/organization" class="btn btn-success float-right">Kembali</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    
                    <%= form_with model: @person ,:url => person_store_path, :method => "post", local: true do |f| %>
                    <%= f.hidden_field :organization_id, value: @organization_id %>
                    <div class="form-group mb-2 col-md-12">
                        <label for="exampleInputname">Name</label>
                        <%= f.text_field :name, placeholder: 'name', class: 'form-control', id: 'exampleInputname' %>
                    </div>
                    <div class="form-group mb-2 col-md-12">
                         <label for="exampleInputemail">Email</label>
                        <%= f.text_field :email, placeholder: 'email', class: 'form-control', id: 'exampleInputemail' %>
                    </div>
                    <div class="form-group mb-2 col-md-12">
                         <label for="exampleInputphone">Phone</label>
                        <%= f.text_field :phone, placeholder: 'phone', class: 'form-control', id: 'exampleInputphone' %>
                    </div>
                    <div class="form-group mb-3 col-md-12">
                         <label for="exampleInputlogo">Avatar</label>
                        <%= f.file_field :avatar, placeholder: 'avatar', class: 'form-control', id: 'exampleInputlogo', accept: "image/png, image/gif, image/jpeg" %>
                    </div>
                    
                    <div class="form-group mb-3 col-md-12">
                    <button type="submit" class="btn btn-success btn-block">Simpan</button>                               
                    </div>
                    <% end %>
                </div>
            </div>
        </div>

        <div class="col-md-3"></div>
   </div>

  <% end %>


    <% content_for :script do %>

     <% end %>
  
  <%= render template: "layouts/application" %>